{
  "manifest_version": 2,

  "name": "libmark",
  "description": "Smart bookmark manager",
  "version": "0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "Manage your bookmarks!"
  },
  "permissions": [
    "bookmarks"
  ],
  "background": {
    "scripts": ["omnibox/omnibox.js"],
    "persistent": false
  },
  "devtools_page": "devtools/devtools.html",
  "omnibox": {
    "keyword": "libmark"
  }
}